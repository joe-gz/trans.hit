        <a class="navbar-brand" href="#">trans.hit</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <!-- <li class="dropdown"> -->
            <!-- <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Stations <span class="caret"></span></a> -->
      <div >
        <label>Metro Lines</label>
            <select class="selectpicker" data-style="btn-primary">
               <!-- <optgroup label="Metro Lines"> -->
              <!-- <option data-hidden="true">Metro</option> -->
              <option value="Red">Red</option>
              <option value="Blue"> Blue</option>
              <option value="Orange">Orange</option>
              <option value="Green">Green</option>
              <option value="Yellow">Yellow</option>
              <option value="Silver">Silver</option>
            <!-- </optgroup> -->
            </select>
          </div>
          <!-- </li> -->
        </ul>
        <ul class="nav navbar-nav navbar-right">
          {{user}}
          {{#if currentUser}}
          <li class="logout"><a href="/logout">Logout</a></li>
